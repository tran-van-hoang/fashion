CREATE DATABASE IF NOT EXISTS `profile_live` /*!40100 DEFAULT CHARACTER SET utf8mb4 */;
CREATE DATABASE IF NOT EXISTS `profile_dev` /*!40100 DEFAULT CHARACTER SET utf8mb4 */;
CREATE DATABASE IF NOT EXISTS `profile_testing` /*!40100 DEFAULT CHARACTER SET utf8mb4 */;

CREATE USER 'profile_live'@'localhost' IDENTIFIED BY 'profile_live';
CREATE USER 'profile_dev'@'localhost' IDENTIFIED BY 'profile_dev';
CREATE USER 'profile_testing'@'localhost' IDENTIFIED BY 'profile_testing';

GRANT ALL PRIVILEGES ON profile_live.* TO 'profile_live'@'%' WITH GRANT OPTION;
GRANT ALL PRIVILEGES ON profile_dev.* TO 'profile_dev'@'%' WITH GRANT OPTION;
GRANT ALL PRIVILEGES ON profile_testing.* TO 'profile_testing'@'%' WITH GRANT OPTION;
FLUSH PRIVILEGES;
